<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">











    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/purple_700"
        android:id="@+id/pro_rel"
        android:layout_height="250dp">



        <ImageView
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_afg"
            android:id="@+id/poto"
            android:backgroundTint="@color/white"
            android:layout_height="100dp"/>


          <ImageButton
              android:layout_width="wrap_content"
              android:backgroundTint="@color/white"
              android:background="@drawable/ic_baseline_arrow_back_24"
              android:layout_marginTop="15dp"
              android:layout_marginStart="15dp"
              android:id="@+id/back_buttton"
              android:layout_height="wrap_content"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_below="@id/poto"
              android:id="@+id/abc"
              android:layout_centerHorizontal="true"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/nas"
                  android:textColor="@color/white"
                  android:textSize="18sp"

                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/nas1"
                  android:layout_marginStart="5dp"
                  android:textColor="@color/white"
                  android:textSize="18sp"

                  android:textStyle="bold" />





          </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/abc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/linear"
            app:cardElevation="5dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/ic_baseline_lock_24"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Upgrade to premium Now"
                android:textSize="18sp"
                android:layout_marginStart="45dp"
                android:textColor="@color/black"
                android:layout_marginTop="21dp"
                android:layout_height="wrap_content"/>



        </androidx.cardview.widget.CardView>












        <ImageButton
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/edit_detail"
                    android:layout_height="wrap_content"/>




    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/pro_linear6"
        android:layout_below="@+id/pro_rel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
             android:background="@drawable/ic_baseline_account_box_24"
            android:layout_height="wrap_content"/>

          <TextView
              android:layout_width="wrap_content"
              android:text="Account Info"
              android:textSize="18sp"
              android:layout_marginTop="3dp"
              android:layout_marginStart="7dp"
              android:layout_height="wrap_content"/>






    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/pro_linear"
        android:layout_below="@+id/pro_linear6"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_baseline_contact_support_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Contact us"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content"/>






    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/pro_linear1"
        android:layout_below="@+id/pro_linear"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_baseline_privacy_tip_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Privacy and Term"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content"/>






    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/pro_linear2"
        android:layout_below="@+id/pro_linear1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_baseline_question_answer_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="About"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="9dp"
            android:layout_height="wrap_content"/>






    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/pro_linear3"
        android:layout_below="@+id/pro_linear2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_baseline_account_box_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Help Center"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content"/>






    </LinearLayout>


















</RelativeLayout>